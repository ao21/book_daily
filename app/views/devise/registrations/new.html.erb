<div class="main-wrapper">
  <div class="content-with-header">
    <div class="content-header">
      <div class="header-title"><%= t('.sign_up') %></div>
    </div>
    <div class="content-body">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, "ユーザーネームを入力してください", class: "field-title" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "field-field" %>
        </div>

        <div class="field mt-1">
          <%= f.label :email, "メールアドレスを入力してください", class: "field-title" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "半角のみ", class: "field-field" %>
        </div>
        
        <div class="field mt-1">
          <%= f.label :password, "パスワードを入力してください", class: "field-title" %>
          <% if @minimum_password_length %>
            <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "半角英数のみ", class: "field-field" %>
        </div>

        <div class="field mt-1">
          <%= f.label :password_confirmation, class: "field-title" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "半角英数のみ", class: "field-field" %>
        </div>
        
        <div class="actions-signup">
          <%= f.submit t('.sign_up'), class: "login-submit-btn" %>
        </div>
      <% end %>

      <div class="login-render">
        <%=  render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>