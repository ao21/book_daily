<div class="Header">
  <div class="Header__logo">
    <%= link_to image_tag('title.png'), "/" %>
  </div>

  <nav>
    <ul id="js-Header__list">
      <% unless current_page?(root_path) %>
        <li class="--search">
          <%= render 'books/search_form' %>
        </li>
      <% end %>
      <% if user_signed_in? %>
        <div class="Header__border"></div>
        <li>
          <%= link_to(today_tasks_path) do %>
            <i class="far fa-bookmark"></i>
            <span class="Header__text">TASK</span>
          <% end %>
        </li>
        <div class="Header__border"></div>
        <li>
          <%= link_to(edit_user_registration_path) do %>
            <i class="far fa-user"></i>
            <span class="Header__text">ACCOUNT</span>
          <% end %>
        </li>
      <% else %>
        <div class="Header__border"></div>
        <li>
          <%= link_to(users_guest_sign_in_path, method: :post) do %>
            <i class="fas fa-sign-in-alt"></i>
            <span class="Header__text">GUEST</span>
          <% end %>
        </li>
        <div class="Header__border"></div>
        <li> 
          <%= link_to(new_user_session_path) do %>
            <i class="far fa-user"></i>
            <span class="Header__text">LOGIN</span>
          <% end %>
        </li>
      <% end %>
    </ul>

    <!-- tab以下の場合 -->
    <button class="Header__toggle" id="js-Header__toggle"></button>
    <div class="Header__wrapper">
      <div class="Header__content" id="js-Header__content"></div>
    </div>
  </nav>
</div>