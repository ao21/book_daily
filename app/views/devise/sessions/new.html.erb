<div class="main-wrapper">
  <div class="content-with-header">
    <div class="content-header">
      <div class="header-title"><%= t('.sign_in') %></div>
    </div>
    <div class="content-body">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレスを入力してください", class: "field-title" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "半角のみ", class: "field-field" %>
        </div>

        <div class="field mt-1">
          <%= f.label :password, "パスワードを入力してください", class: "field-title" %>
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "半角英数のみ", class: "field-field" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログインを記憶する", class: "field-title" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit t('.sign_in'), class: "login-submit-btn" %>
        </div>
      <% end %>
      <div class="login-render">
        <%= render "devise/shared/links" %>
      </div>

      <div class="login-guide-wrap">
        <div class= "login-border-wrap">
          <p class="login-guide-text">まだ登録していない方</p>
        </div>
      </div>

      <div class="login-btn-wrap">
        <%= link_to "無料登録", new_registration_path(resource_name), class: "login-btn-link" %>
      </div>
    </div>
  </div>
</div>
