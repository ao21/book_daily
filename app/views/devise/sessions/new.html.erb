<div class="SignIn">
  <%= render 'shared/page_top', main: "Login", sub: "ログイン" %>
  <div class="c-container">
    <div class="Breadcrumbs">
      <%= link_to 'TOP', '/' %>
      <span class="--arrow">></span>
      <span class="--now">ログイン</span>
    </div>
  </div>

  <div class="c-container">
    <div class="SignIn__submit">
      <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post %>
    </div>
    <div class="SignIn__guide">
      <div class="SignIn__guide-border"></div>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="SignIn__field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "半角のみ" %>
      </div>

      <div class="SignIn__field">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "半角英数のみ" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="SignIn__remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログインを記憶する", class: "SignIn__checkbox" %>
        </div>
      <% end %>

      <div class="SignIn__submit">
        <%= f.submit t('.sign_in') %>
      </div>
    <% end %>

    <div class="SignIn__links">
      <%= render "devise/shared/links" %>
    </div>

    <div class="SignIn__guide">
      <div class= "SignIn__guide-border">
        <p>まだ登録していない方</p>
      </div>
    </div>

    <div class="SignIn__submit">
      <%= link_to "無料登録", new_registration_path(resource_name), class: "--signup" %>
    </div>
  </div>
</div>
