<div class="Search">
  <section class="SearchTop">
    <h1 class="SearchTop__title">
      <div class="SearchTop__title --main">Books</div>
      <small class="SearchTop__title --sub">読みたい本を選んでください。</small>
    </h1>
  </section>

  <%= render 'books/breadcrumbs' %>

  <div class="c-container">
    <section class="Search__bar">
      <h3 class="Search__bar-text">"<%= params[:keyword] %>"の検索結果</h3>
    </section>

    <section class="SearchList">
      <ul class="SearchList__group">
        <% if @results_data %>
          <% @results_data.each do |result| %>
            <li class="SearchList__item">
              <div class="SearchList__item-wrap">
                <%= link_to(controller: :books, action: :new, title: result[:title], author: result[:author], image_link: result[:image_link], page_count: result[:page_count], remote: true) do %>
                  <%= render partial: 'book_image', locals: { image_link: result[:image_link] } %>
                  <div class="SearchList__item-title"><%= result[:title] %></div>
                  <div class="SearchList__item-author"><%= result[:author] %></div>
                  <dl class="SearchList__item-page">
                    <dt class="SearchList__item-page-title">ページ数</dt>
                    <dd class="SearchList__item-page-count"><%= result[:page_count] %></dd>
                  </dl>
                  <div class="book-submit">
                  </div>
                <% end %>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
    </section>
  </div>
</div>

<div id="book-new-modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>